source 'https://rubygems.org'

# Specify your gem's dependencies in simple_rsa.gemspec
gemspec

group :test do
  gem 'shoulda' # Shoulda
  gem 'shoulda-matchers'
  gem 'ruby-prof' # perf
  gem 'rb-fsevent'
  gem 'rspec'
  gem 'rspec-core'
  gem 'rspec-mocks'
  gem 'rspec-expectations'
  # Auto Test launch
  gem 'guard-rspec'
end

gem 'debugger', group: [:test, :development]